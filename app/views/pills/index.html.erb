<p id="notice"><%= notice %></p>

<h1>Listing Pills</h1>

<table>
  <thead>
    <tr>
      <th>Drug</th>
      <th>Brand</th>
      <th>Location</th>
      <th>Hospital</th>
      <th>Qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pills.each do |pill| %>
      <tr>
        <td><%= pill.drug %></td>
        <td><%= pill.brand %></td>
        <td><%= pill.location %></td>
        <td><%= pill.hospital %></td>
        <td><%= pill.qty %></td>
        <td><%= link_to 'Show', pill %></td>
        <td><%= link_to 'Edit', edit_pill_path(pill) %></td>
        <td><%= link_to 'Destroy', pill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

